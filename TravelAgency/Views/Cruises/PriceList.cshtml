@model TravelAgency.Models.PriceList
@{
    ViewBag.Title = "PriceList";
}

<h2>Add new arrangement for @Html.ActionLink(Model.cruise.Name, "Details", new { id = Model.CruiseId })</h2>
@using (Html.BeginForm("PriceList", "Cruises"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.date)
        @Html.TextBoxFor(m => m.date, new { @class = "form-control", type = "date" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.InsideCabins)
        @Html.TextBoxFor(m => m.InsideCabins, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BalconyCabins)
        @Html.TextBoxFor(m => m.BalconyCabins, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OcenViewCabins)
        @Html.TextBoxFor(m => m.OcenViewCabins, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.CruiseId)
    <button type="submit" class="btn btn-primary">Add new arrangement</button>
}

