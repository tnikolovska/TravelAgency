@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="col">
        <div class="carousel slide" id="carouselExampleIndicators" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="actice"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1" class="actice"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2" class="actice"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/img/DalechniDestinacii.jpg" alt="First slide" style="height:500px">
                    <div class="carousel-caption">
                        <h3 class="text-center bg-white text-white">@Html.ActionLink("Distant Destinations", "Index", "DistantDestinations")</h3>
                        <p class="text-center bg-white  text-primary">Maldives, Thailand, Zanzibar...</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/cruisesWorld.jpg" alt="Second slide" style="height:500px">
                    <div class="carousel-caption">
                        <h3 class="text-center bg-white  text-white">@Html.ActionLink("Cruises", "Index", "Cruises")</h3>
                        <p class="text-center bg-white  text-primary">Europe, America, Asia...</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/SpecialOffers.jpg" alt="Third slide" style="height:500px">
                    <div class="carousel-caption">
                        <h3 class="text-center bg-white  text-white">@Html.ActionLink("Special Offers", "Index", "SpecialOffers")</h3>
                        <p class="text-center bg-white  text-primary">Russia, Tunis, Morocco, Spain...</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
        </div>
    </div>
   
</div>

